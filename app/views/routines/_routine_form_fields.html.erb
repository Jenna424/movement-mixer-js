<div class="field form-inline">
  <%= f.label :title %>:
  <%= f.text_field :title, placeholder: "Type title of routine...", class: "form-control" %>
</div>

<br>

<div class="field">
  <%= f.label :difficulty_level, "How would you rate the difficulty level of this workout?" %>:
  <%= f.select :difficulty_level, options_for_select(["Beginner", "Intermediate", "Advanced"], selected: f.object.difficulty_level), 
  prompt: "Difficulty Level" %>
</div>

<br>

<div class="field">
  <%= f.label :duration, "How long will it take to perform this workout routine?" %>
  <%= f.number_field :duration, min: 1 %> minutes
</div>