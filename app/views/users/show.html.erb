<h3><%= @user.name %>'s Profile</h3>

<p>
	<strong>Workout Count</strong>: 
	<%= @user.name %> designed <%= @user.routines.count %> workout <%= 'routine'.pluralize(@user.routines.count) %> to date!
</p>

<em><%= link_to "View #{@user.name}'s Workouts", user_path(@user), class: "user-workouts", data: {id: @user.id } %></em>

<br><br>

<div id="user-routines">
</div>

<script id="user-workouts-template" type="text/x-handlebars-template">
	<a href="/routines/{{this.id}}">{{this.title}}</a> |
	<small><strong>Difficulty</strong>: {{difficulty_level}}</small> |
	<small><strong>Duration</strong>: {{duration}} minutes</small>
	<hr>
</script>